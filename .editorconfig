# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Định dạng riêng cho tệp SCSS
[*.scss]
indent_style = space
indent_size = 2

# Định dạng riêng cho tệp JavaScript (js) và TypeScript (ts)
[*.{js,ts}]
indent_style = space
indent_size = 2

# Định dạng riêng cho tệp HTML
[*.html]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
